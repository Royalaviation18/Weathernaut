<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nimbussanl_regu"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvWeatherCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCityName"
        android:text="Weather Condition"
        android:textSize="25sp"
        android:fontFamily="@font/nimbussanl_boldcond"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvWeatherCondition"
        android:text="23 â„ƒ"
        android:textSize="22sp"
        android:fontFamily="@font/nimbussanl_regu"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="32dp"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/tvWeatherCondition"
        android:src="@drawable/sunny_day"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>